{{ 'section.custom-slide.css' | asset_url | stylesheet_tag }}

<!-- Slider main container -->
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    {% for block in section.blocks %}
      <div class="swiper-slide">
        {% if section.settings.have_overlay %}
          <div class="slider-overlay"></div>
        {% endif %}

        {% unless block.settings.slide_text == blank and block.settings.link_text == blank %}
          <article class="slide-content {{ block.settings.vertical_aling }} {{ block.settings.horizontal_aling }}">
            {% if block.settings.slide_text != blank %}
              <h2
                style="
                  color: {{ block.settings.title_color }};
                  font-size: {{ block.settings.title_size }}rem;
                "
              >
                {{ block.settings.slide_text }}
              </h2>
            {% endif %}

            {% if block.settings.link_text != blank %}
              <a href="{{ block.settings.link_url }}"> {{ block.settings.link_text }} </a>
            {% endif %}
          </article>
        {% endunless %}
        <img src="{{ block.settings.slide_image | image_url }}" alt="slide-image">
      </div>
    {% endfor %}
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>

<script>
  const swiper = new Swiper('.swiper', {
    // Optional parameters
    direction: 'horizontal',
    loop: true,

    // If we need pagination
    {% comment %}
    pagination: {
      el: '.swiper-pagination',
    },
    {% endcomment %}

    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },

    // And if we need scrollbar
    scrollbar: {
      el: '.swiper-scrollbar',
    },
  });
</script>

{% schema %}
{
  "name": "Custom slider - Banner",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Esto es el label",
      "default": "Esto es texto por defecto",
      "info": "Info sobre este setting",
      "placeholder": "Esto es el placeholder"
    },
    {
      "type": "checkbox",
      "id": "have_overlay",
      "label": "Have overlay?",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "slide_text",
          "label": "Titulo para el slide"
        },
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Selecciona tu imagen"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Ver m√°s"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Url"
        },
        {
          "type": "select",
          "id": "vertical_aling",
          "label": "Vertical Align",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "middle",
              "label": "Middle"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "middle"
        },
        {
          "type": "select",
          "id": "horizontal_aling",
          "label": "Horizontal Align",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "mid",
              "label": "Middle"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "mid"
        },
        {
          "type": "header",
          "content": "Color Settings"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title color",
          "default": "#FFF"
        },
        {
          "type": "range",
          "id": "title_size",
          "min": 1,
          "max": 10,
          "step": 0.5,
          "unit": "rem",
          "label": "Title font size",
          "default": 2
        }
      ]
    }
  ]
}
{% endschema %}
